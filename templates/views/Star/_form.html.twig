{% if star is defined and star.id > 0 %}
    <form method="POST" action="/stars/{{star.id}}">
        <input type="hidden" name="id" value="{{star.id}}"/>
{% else %}
    <form method="POST" action="/stars">
{% endif %}

        <div>
            <label>Star ID:</label>
            <input type="text" name="id" {% if star is defined and star.id %} value="{{star.id}}"{% endif %} />
        </div>

        <div>
            <label>Star Name:</label>
            <input type="text" name="name" {% if star is defined and star.name %} value="{{star.name}}"{% endif %} />
        </div>

        <div>
            <label>Star Type:</label>
            <input type="text" name="type" {% if star is defined and star.type %} value="{{star.type}}"{% endif %} />
        </div>

        <div>
            <label>Star Size:</label>
            <input type="text" name="size" {% if star is defined and star.size %} value="{{star.size}}"{% endif %} />
        </div>


    </form>